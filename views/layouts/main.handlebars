<body>
    <header>
        <div class="row justify-content-between header-container">
            <div class="col-4">
                <a href="/"><img id="logo" class="logo" src="./img/logotest.png" alt="logo"></a>
            </div>

            <div class="col-4 nav-wrap">

                {{#if logged_in}}
                <div class="row">
                    <div class="col-3">
                        <a href="/" id="home-btn">Home</a>
                    </div>
                    <a class="create-text" href="/userpage">Create Tour</a>
                    <div class="col-5">
                    <button id="logout" class="btn btn-warning ">Log out</button>
                </div>
                </div>
                
            </div>
            {{else}}
            <div class="row">
                <div class="col-1">
                    <a href="/" id="home-btn">Home</a>
                </div>
                <div class="col-6 login-wrap">
                    <a class="login-text" href="/login">Login</a>
                </div>
                <div class="col-6">
                    <a href="/signup" class="btn btn-warning">Sign up</a>
                </div>
            </div>

            {{/if}}

        </div>
        </div>

    </header>
    <main>
        {{{body}}}
    </main>
    <footer>
        <div class="row  footer-container">
            <div class="col-sm-4   logo-text-wrap">
                <a href="/"><img id="logo" class="logo" src="./img/footer-logo.png" alt="logo"></a>
                <p>Enjoy creating a tour as a guide and <br> free booking a tour as a guest.</p>
            </div>
            <div class="col-sm-4   account-list-wrap">
                <h7>Your Account</h7>
                <ul class="footer-account-list">
                    {{#if logged_in}}
                    <li>
                        <a href="/" id="logout">Log out</a>
                    </li>
                    {{else}}
                    <li>
                        <a href="/signup">Sign up</a>
                    </li>
                    <li>
                        <a href="/login">Log in</a>
                    </li>
                    {{/if}}
                </ul>

            </div>
            <div class="col-sm-4  follow">
                <h7>Follow us</h7>
                <div>
                    <a href="https://www.instagram.com/"><i class="fa-brands fa-instagram"></i></a>
                    <a href="https://www.facebook.com/"><i class="fa-brands fa-facebook"></i></a>
                    <a href="https://twitter.com/"><i class="fa-brands fa-twitter"></i></a>
                </div>

            </div>
        </div>
        <div class="rights-wrap">
