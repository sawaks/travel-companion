<div class="input-page-container">
    <h2>UPDATE YOUR OWN TOUR</h2>
    <p>Update your own tour!</p>
    <h3 class="form-title">LET'S UPDATE!</h3>
    <br />
    <form class="create-form form-group">
        <label for="tour-title">
            TOUR TITLE:
        </label>
        <br />
        <input class="form-control" id="title" name="title" value="{{title}}">
        <br />
        <div class="form-group">
            <label for="description">
                DESCRIPTION:
            </label>
            <textarea class="form-control" id="description" rows="3">{{description}}</textarea>
        </div>
        <br />
        <div class="form-group">
            <label for="city">
                CITY:
            </label>
            <select name=”item” class="form-control" id="city">
                <option selected> {{location}} </option>
                <option value=”item1”>Sydney</option>
                <option value=”item2”>Brisbane</option>
                <option value=”item3”>Melbourne</option>
            </select>
        </div>

        <br />
        <label for="place">
            PLACE:
        </label>
        <br />
        <input class="form-control" id="place" name="place" value="{{place}}">
        <br />
        <div class="form-group">
            <label for="place">
                DIFFICULTY:
            </label>
            <select name=”item” class="form-control" id="difficulty">
                <option selected> {{difficulty_level}} </option>
                <option value=”item1”>Easy</option>
                <option value=”item2”>Moderate</option>
                <option value=”item3”>Hard</option>
            </select>
        </div>
        <br />
        <div class="form-group">
            <label for="category">
                CATEGORY:
            </label>
            <br />
            <select name=”item” class="form-control" id="category">
                <option selected> {{category}} </option>
                <option value=”item1”>Site Seeing</option>
                <option value=”item2”>Escape the City</option>
                <option value=”item3”>Physical Activity</option>
                <option value=”item4”>Food and Drink</option>
                <option value=”item5”>Sport and Culture</option>
            </select>
        </div>
        <br />
        <div class="form-group">
            <label for="image">
                TOUR IMAGE:
            </label>
            <br />
            <select name=”item” class="form-control" id="image">
                <option selected> {{img_name}} </option>
                <option value=”item1”>site_seeing(art).jpg</option>
                <option value=”item2”>site_seeing(city).jpg</option>
                <option value=”item3”>site_seeing(harbour).jpg</option>
                <option value=”item4”>site_seeing(market).jpg</option>
                <option value=”item6”>escape_the_city(animal).jpg</option>
                <option value=”item7”>escape_the_city(mountain).jpg</option>
                <option value=”item8”>physical_activity(bike).jpg</option>
                <option value=”item9”>physical_activity(kayak).jpg</option>
                <option value=”item10”>physical_activity(surf).jpg</option>
                <option value=”item11”>food_and_drink(cafe).jpg</option>
                <option value=”item12”>food_and_drink(group).jpg</option>
                <option value=”item13”>food_and_drink(pub).jpg</option>
                <option value=”item14”>sport_and_culture(studium).jpg</option>
                <option value=”item15”>sport_and_culture(studium2).jpg</option>
                <option value=”item16”>sport_and_culture(studium3).jpg</option>

            </select>
        </div>
        <br />
        <label for="person-limit">
            PERSON LIMIT:
        </label>
        <br />
        <input class="form-control" id="person-limit" name="person-limit" value="{{person_limit}}">
        <br />
        <label for="cost">
            PRICE:
        </label>
        <br />
        <input class="form-control" id="cost" name="cost" value="{{cost}}">
        <br />
        <div class="btn-wrap">
            <button value="Submit" type="submit" class="btn btn-warning update-btn" data-id="{{id}}">
                UPDATE
            </button>
            <button class="btn btn-success delete-btn" data-id="{{id}}">DELETE</button>
        </div>

    </form>

</div>
<script src="./js/update.js"></script>